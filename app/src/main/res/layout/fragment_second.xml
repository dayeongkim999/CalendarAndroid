<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="1000dp"
      android:orientation="vertical"
      android:layout_margin="20dp">
      <Button
          android:id="@+id/button_second"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:text="@string/next"
          android:layout_gravity="center"/>
      <LinearLayout
          android:id="@+id/title_first"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="bottom"
          android:paddingBottom="5dp"
          android:paddingRight="10dp">

          <EditText
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:background="@android:color/transparent"
              android:hint="제목" />

          <View
              android:layout_width="0dp"
              android:layout_height="0dp"
              android:layout_weight="1"
              />
          <ImageView
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:src="@drawable/bluecircle"/>

      </LinearLayout>

      <com.google.android.material.divider.MaterialDivider
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          app:dividerColor="@color/black"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:orientation="horizontal"
          android:layout_marginTop="20dp"
          android:gravity="center|left">
          <ImageView
              android:layout_width="16dp"
              android:layout_height="16dp"
              android:src="@drawable/clock"/>
          <TextView
              android:layout_width="280dp"
              android:layout_height="wrap_content"
              android:text="하루 종일"
              android:textStyle="bold"
              android:paddingLeft="15dp"/>
          <View
              android:layout_width="0dp"
              android:layout_height="0dp"
              android:layout_weight="1"
              />
          <Switch
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              />
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:orientation="horizontal"
          android:layout_marginTop="20dp"
          android:weightSum="3">
          <LinearLayout
              android:layout_weight="1"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:orientation="vertical">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="4월 5일 (금)"
                  android:textStyle="bold"
                  android:layout_gravity="center|top"/>
              <View
                  android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="오전 8:00"
                  android:layout_gravity="center|bottom"/>
          </LinearLayout>

          <LinearLayout
              android:layout_weight="1"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:gravity="center">
              <ImageView
                  android:layout_width="20dp"
                  android:layout_height="20dp"
                  android:src="@drawable/closeup"/>
          </LinearLayout>

          <LinearLayout
              android:layout_weight="1"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:orientation="vertical">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="4월 5일 (금)"
                  android:textStyle="bold"
                  android:layout_gravity="center|top"/>
              <View
                  android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="오전 8:00"
                  android:layout_gravity="center|bottom"/>
          </LinearLayout>

      </LinearLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginTop="20dp">

          <com.google.android.material.divider.MaterialDivider
              android:layout_width="match_parent"
              android:layout_height="1dp"
              />

          <CalendarView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
      </LinearLayout>

      <com.google.android.material.divider.MaterialDivider
          android:layout_width="match_parent"
          android:layout_height="1dp"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center"
          android:layout_marginVertical="15dp">
          <ImageView
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:src="@drawable/location"
              android:layout_marginRight="16dp"/>
          <EditText
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/transparent"
              android:hint="장소" />

      </LinearLayout>

      <com.google.android.material.divider.MaterialDivider
          android:layout_width="match_parent"
          android:layout_height="1dp"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center"
          android:layout_marginVertical="15dp">
          <ImageView
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:src="@drawable/emailplus"
              android:layout_marginRight="16dp"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="email@gmail.com"/>
      </LinearLayout>

      <com.google.android.material.divider.MaterialDivider
          android:layout_width="match_parent"
          android:layout_height="1dp"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center"
          android:layout_marginVertical="15dp">
          <ImageView
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:src="@drawable/alarm"
              android:layout_marginRight="16dp"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="10분 전"/>
      </LinearLayout>

      <com.google.android.material.divider.MaterialDivider
          android:layout_width="match_parent"
          android:layout_height="1dp"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center"
          android:layout_marginVertical="15dp">
          <ImageView
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:src="@drawable/repeat"
              android:layout_marginRight="16dp"/>
          <EditText
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/transparent"
              android:hint="반복 안 함" />
      </LinearLayout>

      <com.google.android.material.divider.MaterialDivider
          android:layout_width="match_parent"
          android:layout_height="1dp"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center"
          android:layout_marginVertical="15dp">
          <ImageView
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:src="@drawable/memo"
              android:layout_marginRight="16dp"/>
          <EditText
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/transparent"
              android:hint="메모" />
      </LinearLayout>

      <com.google.android.material.divider.MaterialDivider
          android:layout_width="match_parent"
          android:layout_height="1dp"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center"
          android:layout_marginVertical="15dp">
          <ImageView
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:src="@drawable/video"
              android:layout_marginRight="16dp"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="영상회의"/>
      </LinearLayout>

      <com.google.android.material.divider.MaterialDivider
          android:layout_width="match_parent"
          android:layout_height="1dp"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center"
          android:layout_marginVertical="15dp">
          <ImageView
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:src="@drawable/clip"
              android:layout_marginRight="16dp"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="첨부파일"/>
      </LinearLayout>

      <com.google.android.material.divider.MaterialDivider
          android:layout_width="match_parent"
          android:layout_height="1dp"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center"
          android:layout_marginVertical="15dp">
          <ImageView
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:src="@drawable/invitetwo"
              android:layout_marginRight="16dp"/>
          <EditText
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/transparent"
              android:hint="초대" />
      </LinearLayout>

      <com.google.android.material.divider.MaterialDivider
          android:layout_width="match_parent"
          android:layout_height="1dp"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center"
          android:layout_marginVertical="15dp">
          <ImageView
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:src="@drawable/geography"
              android:layout_marginRight="16dp"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="(GMT+9) 한국 표준시"/>
      </LinearLayout>

  </LinearLayout>

</androidx.core.widget.NestedScrollView>